{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": "./src",
    "paths": {
      "@Treetop/*": [
        "*"
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "chrome-types",
      "@testing-library/jest-dom",
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./test/**/*.ts",
    "./test/**/*.svelte",
  ],
}
