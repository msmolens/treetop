{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@Treetop/*": [
        "*"
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "jest",
      "firefox-webext-browser",
      "mockzilla-webextension",
      "@testing-library/jest-dom",
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
  ],
  "exclude": [
    "node_modules/*"
  ]
}
